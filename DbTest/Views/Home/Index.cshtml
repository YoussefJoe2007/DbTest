@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <h1 class="text-center display-4">@ViewData["Title"]</h1>

    <div class="text-center mt-4">
        <h3>Welcome to the Product Management System</h3>
        <p class="text-muted">Easily manage your products and inventory</p>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">View Products</h5>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary w-100">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Add New Product</h5>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-success w-100">Add Product</a>
                </div>
            </div>
        </div>
    </div>
</div>
