@model DbTest.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <h1 class="text-center display-4">@ViewData["Title"]</h1>

    <div class="text-center mt-4">
        <h3>Add a New Product</h3>
        <p class="text-muted">Fill in the details below to add a new product to the inventory.</p>
    </div>

    <div class="shadow p-4 rounded bg-light">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Product Name</label>
                <input type="text" id="Name" name="Name" class="form-control" placeholder="Enter product name" required>
            </div>

            <div class="mb-3">
                <label for="Price" class="form-label">Product Price</label>
                <input type="number" id="Price" name="Price" class="form-control" placeholder="Enter product price" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Add Product</button>
        </form>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary w-100">Back to Product List</a>
    </div>
</div>
